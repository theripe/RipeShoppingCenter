<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theripe.center.dao.GoodsCatgegoryMapper">
    <resultMap id="BaseResultMap" type="com.theripe.center.bean.GoodsCategory">
        <id column="category_id" jdbcType="BIGINT" property="categoryId"></id>
        <result column="category_level" jdbcType="TINYINT" property="categoryLevel"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
        <result column="category_name" jdbcType="VARCHAR" property="categoryName"/>
        <result column="category_rank" jdbcType="INTEGER" property="categoryRank"/>
        <result column="is_deleted" jdbcType="TINYINT" property="isDeleted"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="create_user" jdbcType="INTEGER" property="createUser"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="update_user" jdbcType="INTEGER" property="updateUser"/>
    </resultMap>

    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="com.theripe.center.bean.GoodsInfo">
        <result column="goods_detail_content" jdbcType="LONGVARCHAR" property="goodsDetailContent"/>
    </resultMap>
    <sql id="Base_Column_List">
    category_id, category_level, parent_id, category_name, category_rank, is_deleted,
    create_time, create_user, update_time, update_user
    </sql>
    <select id="selectByLevelAndParentIdsAndNumber" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" ></include>
    from mall_goods_category
    where parent_id in
    <foreach collection="parentIds" item="parentId" open ="(" separator="," close=")">
        #{parentId, jdbcType=BIGINT}
    </foreach>
    and category_level = #{categoryLevel,jdbcType= TINYINT}
    and is_deleted = 0
    order by category_rank desc
    <if test="number > 0">
        limit#{number}
    </if>
    </select>


    <select id="selectByid" parameterType="java.lang.Long" resultMap="ResultMapWithBLOBs">
        select
        <include refid="Base_Column_List"/>
        from mall_goods_info
        where goods_id = #{id,jdbcType=BIGINT}
    </select>
</mapper>